<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
    <name>airdata-reference</name>
    <layout>vbox</layout>
    <pref-width>180</pref-width>
    <color>
        <red>0.3</red>
        <green>0.3</green>
        <blue>0.3</blue>
        <alpha>0.6</alpha>
    </color>    
    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>
        <text>
            <label>Airdata reference</label>
        </text>
        <empty>
            <stretch>1</stretch>
        </empty>
        <button>
            <color>
                <red>0.5</red>
                <green>0.5</green>
                <blue>0.5</blue>
                <alpha>0.8</alpha>
            </color>    
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <legend>X</legend>
            <keynum>27</keynum>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    <group>
        <hrule />

        <layout>vbox</layout>
        <valign>top</valign>
        <group>
            <layout>hbox</layout>
            <align>center</align>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&lt;</legend>
                <binding>
                    <condition>
                        <greater-than>
                            <property>instrumentation/adc/reference/vt</property>
                            <value>170</value>
                        </greater-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/vt</property>
                    <step>-1</step>
                </binding>
            </button>
            <input>
                <pref-width>44</pref-width>
                <halign>left</halign>
                <property>instrumentation/adc/reference/vt</property>
                <label>VT </label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <live type="bool">true</live>
            </input>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>             
                <legend>&gt;</legend>
                <binding>
                    <condition>
                        <less-than>
                            <property>instrumentation/adc/reference/vt</property>
                            <value>220</value>
                        </less-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/vt</property>
                    <step>1</step>
                </binding>
            </button>
        </group>
        
        <group>
            <layout>hbox</layout>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&lt;</legend>
                <binding>
                    <condition>
                        <greater-than>
                            <property>instrumentation/adc/reference/v2</property>
                            <property>instrumentation/adc/reference/vr</property>
                        </greater-than>
                        <greater-than>
                            <property>instrumentation/adc/reference/v2</property>
                            <value>135</value>
                        </greater-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/v2</property>
                    <step>-1</step>
                </binding>
            </button>
            <input>
                <pref-width>44</pref-width>
                <halign>left</halign>
                <property>instrumentation/adc/reference/v2</property>
                <label>V2</label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <live type="bool">true</live>
            </input>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&gt;</legend>
                <binding>
                    <condition>
                        <less-than>
                            <property>instrumentation/adc/reference/v2</property>
                            <value>165</value>
                        </less-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/v2</property>
                    <step>1</step>
                </binding>
            </button>
        </group>
        
        <group>
            <layout>hbox</layout>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&lt;</legend>
                <binding>
                    <condition>
                        <greater-than>
                            <property>instrumentation/adc/reference/vr</property>
                            <property>instrumentation/adc/reference/v1</property>
                        </greater-than>
                        <greater-than>
                            <property>instrumentation/adc/reference/vr</property>
                            <value>122</value>
                        </greater-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/vr</property>
                    <step>-1</step>
                </binding>
            </button>
            <input>
                <pref-width>44</pref-width>
                <halign>left</halign>
                <property>instrumentation/adc/reference/vr</property>
                <label>Vr</label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <live type="bool">true</live>
            </input>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&gt;</legend>
                <binding>
                    <condition>
                        <less-than>
                            <property>instrumentation/adc/reference/vr</property>
                            <property>instrumentation/adc/reference/v2</property>
                        </less-than>
                        <less-than>
                            <property>instrumentation/adc/reference/vr</property>
                            <value>155</value>
                        </less-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/vr</property>
                    <step>1</step>
                </binding>
            </button>
        </group>
        
        <group>
            <layout>hbox</layout>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&lt;</legend>
                <binding>
                    <condition>
                        <greater-than>
                            <property>instrumentation/adc/reference/v1</property>
                            <value>120</value>
                        </greater-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/v1</property>
                    <step>-1</step>
                </binding>
            </button>
            <input>
                <pref-width>44</pref-width>
                <halign>left</halign>
                <property>instrumentation/adc/reference/v1</property>
                <label>V1</label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <live type="bool">true</live>
            </input>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&gt;</legend>
                <binding>
                    <condition>
                        <less-than>
                            <property>instrumentation/adc/reference/v1</property>
                            <property>instrumentation/adc/reference/vr</property>
                        </less-than>
                        <less-than>
                            <property>instrumentation/adc/reference/v1</property>
                            <value>150</value>
                        </less-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/v1</property>
                    <step>1</step>
                </binding>
            </button>
        </group>
        <button>
            <color>
                <red>0.25</red>
                <green>0.8</green>
                <blue>0.25</blue>
                <alpha>0.8</alpha>
            </color>    
            <legend>Auto config</legend>
            <binding>
                <command>adc_autoconf</command>
            </binding>
        </button>
            
        <hrule />
            
        <group>
            <layout>hbox</layout>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&lt;</legend>
                <binding>
                    <condition>
                        <greater-than-equals>
                            <property>instrumentation/adc/reference/mda</property>
                            <value>10</value>
                        </greater-than-equals>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/mda</property>
                    <step>-10</step>
                </binding>
            </button>
            <input>
                <pref-width>44</pref-width>
                <halign>left</halign>
                <property>instrumentation/adc/reference/mda</property>
                <label>MDA</label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <live type="bool">true</live>
            </input>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&gt;</legend>
                <binding>
                    <condition>
                        <less-than>
                            <property>instrumentation/adc/reference/mda</property>
                            <value>9900</value>
                        </less-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/mda</property>
                    <step>10</step>
                </binding>
            </button>
        </group>
        
        <group>
            <layout>hbox</layout>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&lt;</legend>
                <binding>
                    <condition>
                        <greater-than>
                            <property>instrumentation/adc/reference/dh</property>
                            <value>0</value>
                        </greater-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/dh</property>
                    <step>-1</step>
                </binding>
            </button>
            <input>
                <pref-width>44</pref-width>
                <halign>left</halign>
                <property>instrumentation/adc/reference/dh</property>
                <label>DH</label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <live type="bool">true</live>
            </input>
            <button>
                <pref-height>25</pref-height>
                <pref-width>25</pref-width>
                <legend>&gt;</legend>
                <binding>
                    <condition>
                        <less-than>
                            <property>instrumentation/adc/reference/dh</property>
                            <value>999</value>
                        </less-than>
                    </condition>
                    <command>property-adjust</command>
                    <property>instrumentation/adc/reference/dh</property>
                    <step>1</step>
                </binding>
            </button>   
        </group>
    </group>
</PropertyList>
