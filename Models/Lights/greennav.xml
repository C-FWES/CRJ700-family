<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<path>greennav.ac</path>
    
    <params>
        <power-source>systems/DC/outputs/nav-lights</power-source>
        <x-m />
        <y-m />
        <z-m />
    </params>
    
    <animation>
		<type>select</type>
		<condition>
			<greater-than>
                <property alias="/params/power-source" />
				<value>15</value>
            </greater-than>
        </condition>
    </animation>
    
	<animation>
		<type>billboard</type>
    </animation>
    
	<light>
        <name>nav-green</name>
		<type>point</type>
		<position>
            <x alias="/params/x-m" />
            <y alias="/params/y-m" />
            <z alias="/params/z-m" />
        </position>
		<ambient>
			<r>0.03</r>
			<g>0.03</g>
			<b>0.03</b>
			<a>1.0</a>
        </ambient>
		<diffuse>
			<r>0.2</r>
			<g>1.0</g>
			<b>0.2</b>
			<a>1.0</a>
        </diffuse>
		<specular>
			<r>0.7</r>
			<g>0.7</g>
			<b>0.7</b>
			<a>1.0</a>
        </specular>
        <!-- http://wiki.ogre3d.org/tiki-index.php?page=-Point+Light+Attenuation -->
		<attenuation>
			<c>1.0</c>
			<l>0.7</l>
			<q>1.8</q>
        </attenuation>
		<range-m>7</range-m>
    </light>
</PropertyList>
